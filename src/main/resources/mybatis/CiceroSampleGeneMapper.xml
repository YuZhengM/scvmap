<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.boot.mapper.CiceroSampleGeneMapper">
    <resultMap id="BaseResultMap" type="com.spring.boot.pojo.CiceroSampleGene">
        <result column="f_sample_id" jdbcType="VARCHAR" property="sampleId"/>
        <result column="f_gene" jdbcType="VARCHAR" property="gene"/>
        <result column="f_score" jdbcType="DOUBLE" property="score"/>
    </resultMap>
    <select id="selectSampleIdByGeneList" resultType="java.lang.String">
        <foreach collection="signalIdSampleGeneListMap" index="key" item="values" separator=" UNION ">
            SELECT f_sample_id FROM t_cicero_sample_gene_${key} WHERE f_gene IN
            <foreach collection="values" open="(" separator="," close=")" item="value">
                #{value}
            </foreach>
            <if test="coScore != null and coScore != 0">
                AND f_score <![CDATA[ >= ]]> #{coScore}
            </if>
        </foreach>
    </select>
</mapper>